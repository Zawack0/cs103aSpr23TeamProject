<div class="jumbotron">
    <h1> Transactions for <%= user.username %> </h1>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <p> Here is your list of transactions! </p>

    <style>
      table {
        border-collapse: collapse;
        width: 100%;
      }

      th, td {
        text-align: left;
        padding: 8px;
        border: 1px solid black;
      }

      .button-bar {
        display: flex;
        justify-content: space-around;
        align-items: center;
        background-color: #f2f2f2;
        padding: 10px;
      }
    
      .button-bar button {
        background-color: #2196F3;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 5px;
      }
    
      .button-bar button:hover {
        background-color: #0b7dda;
      }
    </style>

    <div class="button-bar">
      <button onclick="location.href='/transaction/group'">group by category</button>
      <button onclick="location.href='/transaction/sort/category'">sort by category</button>
      <button onclick="location.href='transaction/sort/amount'">sort by amount</button>
      <button onclick="location.href='transaction/sort/desc'">sort by description</button>
      <button onclick="location.href='transaction/sort/date'">sort by date</button>
    </div>


    <table>
      <thead>
        <tr>
          <th>description</th>
          <th>amount</th>
          <th>category</th>
          <th>date</th>
          <th>delete</th>
          <th>edit</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(function(transaction) { %>
          <tr>
            <td><%= transaction.description %></td>
            <td><%= transaction.amount %></td>
            <td><%= transaction.category %></td>
            <td><%= transaction.date %></td>
            <!-- Add additional table cells for any other fields in your transactionItem schema -->
          </tr>
        <% }); %>
      </tbody>
    </table>


      
    <div class="col-sm-5">
      <h2>Add a new Transaction</h2>
      <form method="post" action="/add">
          <input type="text" name="description" placeholder="description" required> <br>
          <input type="text" name="category" placeholder="category" required> <br>
          <input type="text" name="amount" placeholder="amount" required> <br>
          <input type="text" name="date" placeholder="mm/dd/yyyy" required> <br>
          
        
        
          <button type="submit">store</button>
      </form>
  </div>





  </div>
